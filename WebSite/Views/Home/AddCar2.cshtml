@model WebSite.Models.Car

@{
    ViewBag.Title = "Добавить авто";
}

<h2>Добавить авто</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Brand, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Brand)
                @Html.ValidationMessageFor(model => model.Brand)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Model, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Model)
                @Html.ValidationMessageFor(model => model.Model)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Year, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Year)
                @Html.ValidationMessageFor(model => model.Year)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EngineType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.EngineType)
                    @Html.ValidationMessageFor(model => model.EngineType)*@

                @*<select class="form-control" id="EngineType">
                        <option>Бензиновый</option>
                        <option>Дизельный</option>
                    </select>*@

                @Html.DropDownList("EngineType", new SelectList(new string[] { "Gas", "Diesel" }), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EngineAmount, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width:100px;">
                @*@Html.EditorFor(model => model.EngineAmount)
                    @Html.ValidationMessageFor(model => model.EngineAmount)*@
                @Html.DropDownList("EngineAmount", new SelectList(new string[] { "1.0", "1.1", "1.2", "1.3", "1.4", "1.5", "1.6", "1.7", "1.8", "1.9", "2.0", "2.1", "2.2", "2.3", "2.4", "2.5", "2.6", "2.7", "2.8", "2.9", "3.0", "3.1", "3.2", "3.3", "3.4", "3.5", "3.6", "3.7", "3.8", "3.9", "4.0", "4.1", "4.2", "4.3", "4.4", "4.5", "4.6", "4.7", "4.8", "4.9", "5.0" }), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GearBoxType, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width:205px;">
                @*@Html.EditorFor(model => model.GearBoxType)
                    @Html.ValidationMessageFor(model => model.GearBoxType)*@
                @Html.DropDownList("GearBoxType", new SelectList(new string[] { "Mechanical", "Automatic"}), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TankAmount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TankAmount)
                @Html.ValidationMessageFor(model => model.TankAmount)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsCarHasDC, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IsCarHasDC)
                @Html.ValidationMessageFor(model => model.IsCarHasDC)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
