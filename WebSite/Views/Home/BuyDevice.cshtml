@{
    ViewBag.Title = "BuyDevice";
}

<h2>Order device</h2>
<div style="text-align:center">
    <img src="~/Content/device.png" width="250px">
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <input class="form-control" name="Name" type="text" value="" required placeholder="Name" />
                @*@Html.TextBox("Items", "", new { @class = "form-control", @placeholder = "Наименование" })*@
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Surname</label>
            <div class="col-md-10">
                <input class="form-control" name="Surname" type="text" value="" required placeholder="Surname" />
                @*@Html.TextBox("Items", "", new { @class = "form-control", @placeholder = "Ширина" })*@
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">City</label>
            <div class="col-md-10">
                <input class="form-control" name="City" type="text" value="" required placeholder="City" />
                @*@Html.TextBox("Items", "", new { @class = "form-control", @placeholder = "Высота" })*@
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Count</label>
            <div class="col-md-10">
                <input class="form-control" name="Weight" type="number" value="" required placeholder="Number " />
                @*@Html.TextBox("Items", "", new { @class = "form-control", @placeholder = "Вес" })*@
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mail number</label>
            <div class="col-md-10">
                <select class="form-control" id="sel1" name="Type" required>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Order" class="btn btn-success" />
            </div>
        </div>
    </div>
}


